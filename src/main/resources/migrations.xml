<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="1" author="guestbook-service">
        <createTable tableName="guestbook">
            <column name="id" type="long">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar2(255)">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar2(32)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createSequence sequenceName="guestbook_sequence"/>
    </changeSet>

    <changeSet id="2" author="uzilan">
        <createTable tableName="entry">
            <column name="id" type="long">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="guestbook_id" type="long">
                <constraints nullable="false"/>
            </column>
            <column name="text" type="varchar2(255)">
                <constraints nullable="true"/>
            </column>
            <column name="author" type="varchar2(100)">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <createSequence sequenceName="entry_sequence"/>
    </changeSet>


</databaseChangeLog>